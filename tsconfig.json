{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": false,
    "lib": ["es2015", "esnext.asynciterable", "dom", "es7"],
    "downlevelIteration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "exclude": ["./node_modules/*", "./dist"],
  "parcel-plugin-typescript": {
    // If true type-checking is disabled
    "transpileOnly": false
  }
}
