{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "lib": [
      "es2015",
      "esnext.asynciterable",
      "dom",
      "es7"
    ],
    "downlevelIteration": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "importHelpers": true,
    "baseUrl": "."
  },
  "exclude": [
    "./node_modules/*",
    "./dist",
    "./src/**/*.html",
    "./src/demo",
    "./src/__tests__",
    "./src/**/*.spec.ts"
  ]
}