{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": false,
    "lib": ["es2015", "esnext.asynciterable", "dom", "es7"],
    "downlevelIteration": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "importHelpers": true,
    "baseUrl": "."
    // "paths": {
    //   "~/*": ["./src/*"]
    // }
  },
  "exclude": [
    "./node_modules/*",
    "./dist",
    "./**/*.html",
    "./src/demo",
    "./src/__tests__",
    "./src/**/*.spec.ts"
  ],
  "parcel-plugin-typescript": {
    // If true type-checking is disabled
    "transpileOnly": false
  }
}
